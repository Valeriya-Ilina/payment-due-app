      <p>Pay Method: <%= singleBill.payMethod %></p>
      Autopay: <input type="checkbox" name="autopay"
        <% if (singleBill.autopay) { %>
            checked
        <% } %>
        disabled />
      <p>Notes: <%= singleBill.notes %> -->

      <form method=POST action="/bills/<%= index %>?_method=DELETE">
          <button class="waves-effect waves-light btn"><input type='hidden'/><i class="material-icons left">delete</i>DELETE</button>
      </form>

      <a href="/bills/<%= index %>/edit" class="waves-effect waves-light btn"><i class="material-icons left">edit</i>Edit Bill</a>
   </main>
     <%- include('../partials/footer.ejs') %>
  </body>
</html>
